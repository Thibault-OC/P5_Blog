{% extends 'template/layout.html.twig' %}

{% block content %}





    <div class="container page-user-blog">
        <div class="row">


            {% for donnees in posts %}


                <!-- Modal -->
                <div class="modal fade" id="modalvalidation{{ donnees.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">


                            <div class="modal-body">
                                Voulez vous vraiment supprimer le blog ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">NON</button>
                                <a type="button" class="btn btn-primary" href="../P5/supprimer-blog/{{ donnees.id }}">OUI</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 list-blog-user">
                    <div class="content row">
                        <div class="col-md-4">
                            <img src="../P5/public/img/{{ donnees.image }}"
                                 alt="{{ donnees.title }}">
                        </div>
                        <div class="col-md-8">
                            <div class="content">
                                <h2>{{ donnees.title }}</h2>
                                <p class="date">{{ donnees.update_date|date("d/m/Y") }}</p>
                                <p class="text">{{ donnees.chapo }}</p>

                                <a href="../P5/modifier-article/{{ donnees.id }}"
                                   class="btn btn-success btn-lg"> Modifier</a>

                                <a  data-toggle="modal" data-target="#modalvalidation{{ donnees.id }}"
                                   class="btn btn-danger btn-lg"> Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>

{% endblock %}
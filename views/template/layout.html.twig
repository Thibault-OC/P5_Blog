<body id="page-top" class="index">
<!-- Navigation -->
<nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="../P5/accueil">BLOG PHP</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li class="page-scroll">
                    <a href="../P5/annonces">Voir les blogs</a>
                </li>

                {% if session.admin == 1 %}

                    <li class="page-scroll">
                        <a href="../P5/addpost">Ajouter un blog</a>
                    </li>

                    <li class="page-scroll">
                        <a href="../P5/mes-articles">Modifier mes blogs</a>
                    </li>

                {% endif %}

                {% if session.pseudo is empty %}


                <li class="page-scroll">
                    <a href="../P5/user">Connexion</a>
                </li>
                <li class="page-scroll">
                    <a href="../P5/inscription">Inscription</a>
                </li>

                {% endif %}


                {% if session.pseudo is defined %}



                <li class="page-scroll">
                    <a href="../P5/logout">Déconnexion</a>
                </li>
                 <li class="page-scroll">
                     
                     <a class="user_menu" data-toggle="modal" data-target="#exampleModal"> {{ session.pseudo }} </a>
                 </li>

                {% endif %}


            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Mes informations</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="info"><span>Prénom :</span> {{ session.pseudo }} </p>
                <p class="info"><span>Email :</span> {{ session.email }} </p>
                <p class="info" ><span>Rôle :</span> {% if session.admin == 1 %} Administrateur {% endif %} {% if session.admin == 0 %} Utilisateur {% endif %}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                <!--<button type="button" class="btn btn-primary">Save changes</button>-->
            </div>
        </div>
    </div>
</div>



<section class="content_page">

    {% if message is defined %}

        <div class="alert alert-warning" role="alert">
            {{ message}}
        </div>

    {% endif %}
    {% if message_success is defined  or  session.message is defined%}

        <div class="alert alert-success" role="alert">
            {{ message_success}}
            {{ session.message}}
        </div>

    {% endif %}



    {% block content %} {% endblock %}
</section>

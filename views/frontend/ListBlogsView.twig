{% extends 'template/layout.html.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            <h1>Les blogs</h1>

            {% for donnees in posts %}

                <div class="col-lg-4 col-sm-6  col-12 list-blog">
                    <img src="../P5/public/img/{{ donnees.image }}"
                         alt="{{ donnees.title }}">
                    <div class="content">


                        <h2>{{ donnees.title }}</h2>
                        <p class="date">{{ donnees.update_date|date("d/m/Y") }}</p>
                        <p class="text">{{ donnees.chapo }}</p>

                        <a href="../P5/annonce/{{ donnees.id }}"
                           class="btn btn-success btn-lg"> voir plus</a>
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>

{% endblock %}